<% layout("layouts/boilerplate") %>

<body>

    <div class="row"></div>
        <div class="col-8 offset-2">
            <h3>Create a New Listing</h3>
    
            <form action="/listings" method="post" class="needs-validation" novalidate enctype="multipart/form-data">

                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="title" id="title" placeholder="enter title" class="form-control" required>

                    <div class="valid-feedback">Title looks good</div>
                    <div class="invalid-feedback">Enter a valid title</div>
                </div>


                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea type="text" name="description" id="description" placeholder="enter description" class="form-control" required></textarea>

                    <div class="valid-feedback">Description looks nice</div>
                    <div class="invalid-feedback">Enter a valid description</div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Upload Image</label>
                    <input type="file" name="image" id="image" class="form-control" required>

                    <div class="valid-feedback">Image looks clear</div>
                    <div class="invalid-feedback">Give an image</div>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="title" class="form-label">Price</label>
                        <input type="" name="price" id="price" placeholder="enter price" class="form-control" required>

                        <div class="valid-feedback">Price seems satisfactory</div>
                        <div class="invalid-feedback">Enter a valid price</div>
                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="title" class="form-label">Country</label>
                        <input type="text" name="country" id="country" placeholder="enter country" class="form-control" required>

                        <div class="valid-feedback">Beautiful country, huh</div>
                        <div class="invalid-feedback">Give the country name</div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="title" class="form-label">Location</label>
                    <input type="text" name="location" id="location" placeholder="enter location" class="form-control" required>

                    <div class="valid-feedback">Scenic location</div>
                    <div class="invalid-feedback">Enter a valid location</div>
                </div>

                <br><br>

                <button class="btn btn-dark add-btn">Add</button>
            
                <br><br>
            
            </form>
        </div>
    </div>
</body>