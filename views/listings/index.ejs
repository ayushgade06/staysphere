<% layout("layouts/boilerplate") %>

<style>
  /* ---------------- FILTERS ---------------- */

  #filters-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 1.5rem;
    padding: 0 0.7rem;
  }

  #filters {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    margin: 0 auto;
  }

  /* Remove link underline + blue color */
  #filters a {
    text-decoration: none !important;
    color: inherit !important;
  }

  body.dark-mode #filters a {
    color: inherit !important;
  }

  .filter {
    text-align: center;
    opacity: 0.7;
    transition: 0.2s ease;
    margin: 0 auto;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
    transform: translateY(-2px);
  }

  .filter p {
    font-size: 0.85rem;
    margin-top: 0.3rem;
  }

  /* Active Filter Highlight */
  .filter.active p,
  .filter.active i {
    font-weight: 600;
    opacity: 1 !important;
    filter: drop-shadow(0 0 3px rgba(255,255,255,0.4));
  }

  /* ---------------- LISTING CARDS ---------------- */

  .listing-link {
    text-decoration: none;
    color: inherit;
  }

  .listing-card .card {
    border: none;
    border-radius: 15px;
    overflow: hidden;
    transition: 0.25s ease-in-out;
    background: #fff;
    box-shadow: 0px 3px 10px rgba(0, 0, 0, 0.08);
  }

  .listing-card .card:hover {
    transform: translateY(-6px);
    box-shadow: 0px 10px 25px rgba(0,0,0,0.15);
  }

  .listing-card img {
    height: 20rem;
    width: 100%;
    object-fit: cover;
  }

  .card-body {
    padding: 14px 18px;
  }

  .card-body p {
    margin: 0;
    font-size: 1rem;
    color: #333;
  }

  .card-body b {
    font-size: 1.1rem;
  }

  .row {
    row-gap: 32px;
    margin-top: 2rem;
  }

  /* ---------------- THEME SWITCH ---------------- */

  .theme-toggle {
    position: relative;
  }

  .switch {
    width: 50px;
    height: 25px;
    background: #ccc;
    display: inline-block;
    border-radius: 50px;
    position: relative;
    cursor: pointer;
    transition: background 0.3s ease;
  }

  .switch::after {
    content: "";
    width: 22px;
    height: 22px;
    background: #fff;
    border-radius: 50%;
    position: absolute;
    top: 1.5px;
    left: 2px;
    transition: transform 0.3s ease;
  }

  #themeSwitch {
    display: none;
  }

  #themeSwitch:checked + .switch {
    background: #ff5a5f !important;
    box-shadow: 0 0 10px rgba(255, 90, 95, 0.6);
  }

  #themeSwitch:checked + .switch::after {
    transform: translateX(25px);
  }

</style>

<body>

